#
#  This is an example of an 8 cpu simulation of a BCC (tantalum) crystal
#  using the 'glide' mobility to force dislocations to move
#  within their assigned glide planes.
#
#  Output generated by this example will be placed under the directory
#  specified by the <dirname> value below and includes:
#
#      - restart files
#      - various properties files
#      - gnuplot visualization files
#      - povray visualization files
#
dirname = "tests/glide_results"
#
#  Domain and cell geometry
#
numXdoms = 2
numYdoms = 2
numZdoms = 2
#
numXcells = 4
numYcells = 4
numZcells = 4
#
#  Load balancing setup
#
DLBfreq = 1
decompType = 2
#
#  Discretization controls
#
remeshRule = 2
maxSeg = 5.000000e+02
enforceGlidePlanes = 1
enableCrossSlip = 1
#
#  Select glide mobility for BCC
#
mobilityLaw = "BCC_glide"
#
#  Timestep controls
#
maxstep = 5000
timestepIntegrator = "trapezoid"
nextDT = 1.0e-08
#
#  FMM setup
#
fmEnabled       = 1
fmMPOrder       = 2
fmTaylorOrder   = 5
fmCorrectionTbl = "inputs/fm-ctab.Ta.600K.0GPa.m2.t5.dat"
#
#  Loading conditions
#
loadType = 1
eRate = 1.0e+03
rc = 6
#
# Dump a restart file, a gunplot file and a povray file every 100 cycles,
# and update the properties files every 10 cycles.
#
savetimers = 0
savecn = 1
savecnfreq = 100
savecncounter = 0
gnuplot = 1
gnuplotfreq = 100
gnuplotcounter = 0
povray = 1
povrayfreq = 100
povraycounter = 0
saveprop = 1
savepropfreq = 10
